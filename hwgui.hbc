#PRGFLAGS=-DUNICODE -q -m -n
#CFLAGS=-DUNICODE -DHWG_USE_POINTER_ITEM

PRGFLAGS=-q -m -n -es2
CFLAGS=-DHWG_USE_POINTER_ITEM

